#!/bin/bash

if [[ "$1" == "" ]]; then
    echo "USAGE: install_rpm  <name|url> [name2|url2]"
    echo "Check if a package exists before attempting to install, exits with 1 if any packages get installed"
fi

for pkg in "$@"
do
    name=$( basename $pkg)
    name=${name%.*}
    tmp=/tmp/$(basename $pkg)
    if ! rpm -q $name  2>&1 > /dev/null;  then
        if [[ "$pkg" == *"http:"* || "$pkg" == *"https://"* ]]; then
            curl -k $pkg > $tmp
            yum --nogpgcheck -y  localinstall  $tmp
            rm $tmp
        else
            yum install -y $pkg
        fi
    fi
done

