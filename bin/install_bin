#!/bin/bash
if [[ "$1" == "" ]]; then
    echo "USAGE: install_bin  <name|url> [name2|url2]"
    echo "Check if a bin exists before attempting to install"
    exit 0
fi

BIN=/usr/bin

if [[ "$(uname)" == "Darwin" ]]; then
    BIN=/usr/local/bin
fi

for pkg in "$@"; do
    name=$( basename $pkg)
    base=${name%.*} # remove extension
    bin=$(echo $base | cut -d_ -f1) # strip off os_platform like params
    if [[  "$force" != "true" && -e $BIN/$bin ]]; then
        exit 0
    fi

    tmp=$(mktemp -d)
    wget -nv -O $tmp/$name --no-check-certificate $pkg
    if [[ "$name" != "$base" ]]; then
        cd $tmp
        extract $name
        [[ -e "$name" ]] && rm $name
    fi
    if [[ -e $tmp/$base ]]; then
        mv $tmp/$base $BIN/$bin
    elif [[ -e $tmp/$bin ]]; then
        mv $tmp/$bin $BIN/$bin
    elif [[ "$(expr $(ls | wc -l))" == 1 ]]; then
        bin=$(ls)
        mv $(ls) $BIN/
    else
        echo "Unable to detect bin name in $(ls)"
        exit 1
    fi
    chmod +x $BIN/$bin

done